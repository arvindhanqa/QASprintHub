<ui:FluentWindow x:Class="QASprintHub.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 mc:Ignorable="d"
                 Title="QA Sprint Hub"
                 Height="700" Width="1200"
                 ResizeMode="CanResize" WindowStyle="SingleBorderWindow" ShowInTaskbar="True"
                 WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Date Navigation with Calendar Picker -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <DatePicker x:Name="CalendarDatePicker"
                               SelectedDate="{Binding ElementName=MonthYearText, Path=Tag, Mode=TwoWay}"
                               SelectedDateChanged="CalendarDatePicker_SelectedDateChanged"
                               Margin="0,0,10,0" Width="120"/>
                    <Button Content="â—„" Click="PreviousMonth_Click" Padding="10,5" Margin="0,0,10,0"/>
                    <TextBlock x:Name="MonthYearText" Text="February 2026" FontSize="16" FontWeight="Bold"
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button Content="â–º" Click="NextMonth_Click" Padding="10,5" Margin="0,0,10,0"/>
                    <Button Content="Today" Click="Today_Click" Padding="10,5"/>
                </StackPanel>

                <!-- Title -->
                <TextBlock Grid.Column="1" Text="QA Sprint Hub" FontSize="20" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- Notification Icon -->
                <Button Grid.Column="2" Content="ðŸ””" Padding="10,5"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Navigation -->
            <Border Grid.Column="0" Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <ui:NavigationView x:Name="NavigationView"
                                   IsBackButtonVisible="Collapsed"
                                   IsPaneToggleVisible="False"
                                   OpenPaneLength="200"
                                   PaneDisplayMode="Left">
                    <ui:NavigationView.MenuItems>
                        <ui:NavigationViewItem Content="Sprint Diary" Icon="{ui:SymbolIcon Calendar24}" Tag="CalendarDiary"/>
                        <ui:NavigationViewItem Content="Dashboard" Icon="{ui:SymbolIcon Home24}" Tag="Dashboard"/>
                        <ui:NavigationViewItem Content="Sprint PRs" Icon="{ui:SymbolIcon DocumentBulletList24}" Tag="SprintPRs"/>
                        <ui:NavigationViewItem Content="Watchers" Icon="{ui:SymbolIcon People24}" Tag="Watchers"/>
                        <ui:NavigationViewItem Content="History" Icon="{ui:SymbolIcon History24}" Tag="History"/>
                    </ui:NavigationView.MenuItems>
                    <ui:NavigationView.FooterMenuItems>
                        <ui:NavigationViewItem Content="Settings" Icon="{ui:SymbolIcon Settings24}" Tag="Settings"/>
                    </ui:NavigationView.FooterMenuItems>
                </ui:NavigationView>
            </Border>

            <!-- Content Frame -->
            <Frame x:Name="ContentFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</ui:FluentWindow>
