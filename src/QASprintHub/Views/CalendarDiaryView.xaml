<UserControl x:Class="QASprintHub.Views.CalendarDiaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:enums="clr-namespace:QASprintHub.Models.Enums"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="PRStatusValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:PRStatus"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sprint Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Sprint Title and Watcher -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="{Binding SprintTitle}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="{Binding WatcherName, StringFormat='ðŸ›¡ï¸ QA Watcher: {0}'}"
                              FontSize="16" Foreground="#ECF0F1" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding BackupWatcherName, StringFormat='ðŸ‘¤ Backup: {0}'}"
                              FontSize="14" Foreground="#BDC3C7" Margin="0,3,0,0"
                              Visibility="{Binding BackupWatcherName, Converter={StaticResource StringToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Navigation Controls -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,15,0,0">
                    <Button Content="â—„â—„ Previous Sprint" Command="{Binding PreviousSprintCommand}"
                           Padding="10,5" Margin="0,0,10,0" Background="#34495E" Foreground="White"
                           BorderBrush="#7F8C8D"/>
                    <Button Content="Today" Command="{Binding TodayCommand}"
                           Padding="10,5" Margin="0,0,10,0" Background="#3498DB" Foreground="White"
                           BorderBrush="#2980B9"/>
                    <Button Content="Next Sprint â–ºâ–º" Command="{Binding NextSprintCommand}"
                           Padding="10,5" Background="#34495E" Foreground="White"
                           BorderBrush="#7F8C8D"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Sprint Days Timeline -->
            <Border Grid.Column="0" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding SprintDays}" Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,5" Padding="12"
                                       Background="{Binding IsSelected, Converter={StaticResource BoolToBackgroundConverter}}"
                                       BorderBrush="#3498DB"
                                       BorderThickness="{Binding IsSelected, Converter={StaticResource BoolToBorderThicknessConverter}}"
                                       CornerRadius="5"
                                       Cursor="Hand">
                                    <Border.InputBindings>
                                        <MouseBinding Command="{Binding DataContext.SelectDayCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                     CommandParameter="{Binding}"
                                                     MouseAction="LeftClick"/>
                                    </Border.InputBindings>
                                    <StackPanel>
                                        <TextBlock Text="{Binding DayNumber, StringFormat='Day {0}'}"
                                                  FontWeight="Bold" FontSize="14"
                                                  Foreground="{Binding IsToday, Converter={StaticResource BoolToColorConverter}}"/>
                                        <TextBlock Text="{Binding DayName}" FontSize="12" Foreground="#7F8C8D" Margin="0,2,0,0"/>
                                        <Border Background="#E74C3C" CornerRadius="3" Padding="4,2" Margin="0,5,0,0"
                                               Visibility="{Binding IsToday, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock Text="TODAY" FontSize="10" FontWeight="Bold"
                                                      Foreground="White" HorizontalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Right: Day Details -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30">
                    <!-- Day Header -->
                    <TextBlock Text="{Binding SelectedDay.DayName, StringFormat='ðŸ“… {0}'}"
                              FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                    <!-- Notes Section -->
                    <GroupBox Header="ðŸ“ Notes for this Day" Margin="0,0,0,20">
                        <StackPanel Margin="10">
                            <TextBox Text="{Binding DayNotes, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap" AcceptsReturn="True"
                                    Height="120" VerticalScrollBarVisibility="Auto"
                                    Padding="5"/>
                            <ui:Button Content="Save Notes" Command="{Binding SaveDayNotesCommand}"
                                      Margin="0,10,0,0" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- PRs Section -->
                    <GroupBox Header="ðŸ”€ Pull Requests for this Sprint" Margin="0,0,0,20">
                        <StackPanel Margin="10">
                            <DataGrid ItemsSource="{Binding DayPRs}"
                                     AutoGenerateColumns="False"
                                     CanUserAddRows="False"
                                     HeadersVisibility="Column"
                                     GridLinesVisibility="Horizontal"
                                     CellEditEnding="DataGrid_CellEditEnding"
                                     MaxHeight="400">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                                    <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="120"/>
                                    <DataGridTemplateColumn Header="Status" Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                                       CornerRadius="3" Padding="5,2">
                                                    <TextBlock Text="{Binding Status}" Foreground="White"
                                                              FontWeight="Bold" HorizontalAlignment="Center"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <ComboBox ItemsSource="{Binding Source={StaticResource PRStatusValues}}"
                                                         SelectedItem="{Binding Status, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <TextBlock Text="ðŸ’¡ Switch to 'Sprint PRs' view to add or manage pull requests"
                                      Foreground="Gray" FontSize="12" Margin="0,10,0,0" FontStyle="Italic"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Quick Stats -->
                    <GroupBox Header="ðŸ“Š Sprint Progress">
                        <StackPanel Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1"
                                       Padding="10" Margin="0,0,5,0" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding DayPRs.Count}" FontSize="24" FontWeight="Bold"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock Text="Total PRs" FontSize="12" Foreground="Gray"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1"
                                       Padding="10" Margin="5,0,5,0" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding SprintDays.Count}" FontSize="24" FontWeight="Bold"
                                                  HorizontalAlignment="Center" Foreground="#3498DB"/>
                                        <TextBlock Text="Working Days" FontSize="12" Foreground="Gray"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="1"
                                       Padding="10" Margin="5,0,0,0" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding SelectedDay.DayNumber}" FontSize="24" FontWeight="Bold"
                                                  HorizontalAlignment="Center" Foreground="#27AE60"/>
                                        <TextBlock Text="Current Day" FontSize="12" Foreground="Gray"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
