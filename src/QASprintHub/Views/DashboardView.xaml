<UserControl x:Class="QASprintHub.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Sprint Navigation -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <Button Content="â—„â—„ Previous Sprint" Command="{Binding PreviousSprintCommand}"
                       Padding="10,5" Margin="0,0,10,0" Background="#34495E" Foreground="White"
                       BorderBrush="#7F8C8D"/>
                <Button Content="Current Sprint" Command="{Binding GoToCurrentSprintCommand}"
                       Padding="10,5" Margin="0,0,10,0" Background="#3498DB" Foreground="White"
                       BorderBrush="#2980B9"/>
                <Button Content="Next Sprint â–ºâ–º" Command="{Binding NextSprintCommand}"
                       Padding="10,5" Background="#34495E" Foreground="White"
                       BorderBrush="#7F8C8D"/>
            </StackPanel>

            <!-- Current QA Watcher Card -->
            <GroupBox Header="CURRENT QA WATCHER" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding CurrentWatcher.Name, StringFormat='{}ðŸ›¡ï¸ {0}'}" FontSize="24" FontWeight="Bold"/>
                        <TextBlock Text=" (swapped)" FontSize="18" FontWeight="Bold" Foreground="Orange" Margin="10,0,0,0"
                                   Visibility="{Binding IsWatcherSwapped, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>
                    <TextBlock Text="{Binding CurrentSprint.DisplayName}" FontSize="14" Foreground="Gray"/>
                    <TextBlock Text="{Binding CurrentDay, StringFormat='{}Day {0} of'}" FontSize="14" Foreground="Gray"/>
                    <TextBlock Text="{Binding TotalDays, StringFormat='{}{0} working days'}" FontSize="14" Foreground="Gray"/>

                    <!-- Backup Watcher Info -->
                    <TextBlock Text="{Binding CurrentBackup.BackupMember.Name, StringFormat='{}ðŸ”„ Backup: {0}'}"
                               FontSize="14" Margin="0,10,0,0"
                               Visibility="{Binding CurrentBackup, Converter={StaticResource NullToVisibilityConverter}}"/>

                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <ui:Button Content="Swap Watcher" Command="{Binding SwapWatcherCommand}" Margin="0,0,10,0"/>
                        <ui:Button Content="Assign Backup" Command="{Binding AssignBackupCommand}"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Sprint Snapshot -->
            <GroupBox Header="SPRINT SNAPSHOT" Margin="0,0,0,20">
                <UniformGrid Rows="1" Columns="4" Margin="10">
                    <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="{Binding TotalPRs}" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Total PRs" FontSize="12" HorizontalAlignment="Center" Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="{Binding PendingPRs}" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Orange"/>
                            <TextBlock Text="Pending" FontSize="12" HorizontalAlignment="Center" Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="{Binding MergedPRs}" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Green"/>
                            <TextBlock Text="Merged" FontSize="12" HorizontalAlignment="Center" Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="{Binding BlockedPRs}" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Red"/>
                            <TextBlock Text="Blocked" FontSize="12" HorizontalAlignment="Center" Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </GroupBox>

            <!-- Upcoming -->
            <GroupBox Header="UPCOMING" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="{Binding NextWatcher.Name, StringFormat='{}Next Watcher: {0}'}" FontSize="14"/>
                    <TextBlock Text="{Binding NextSprint.DisplayName}" FontSize="14" Foreground="Gray"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
