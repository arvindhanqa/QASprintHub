<Window x:Class="QASprintHub.Views.Dialogs.SetupWizardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="QA Sprint Hub - Initial Setup"
        Height="550" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Closing="Window_Closing">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Welcome to QA Sprint Hub" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Let's set up your sprint rotation" FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Step Content -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Padding="20" Background="#F9F9F9">
            <Grid>
                <!-- Step 1: Sprint Configuration -->
                <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=1}">
                <TextBlock Text="Step 1: Configure Sprint Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="Sprint Duration (working days):" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBox Text="{Binding SprintDurationDays}" Width="100" Margin="0,0,10,0"/>
                    <TextBlock Text="working days" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="First Sprint Start Date:" Margin="0,0,0,5"/>
                <DatePicker SelectedDate="{Binding FirstSprintStartDate}" Margin="0,0,0,20"/>

                <TextBlock Text="ℹ️ Note: Sprints will automatically rotate through your team members based on the duration you set."
                          TextWrapping="Wrap" Foreground="Gray" FontSize="12"/>
            </StackPanel>

            <!-- Step 2: Team Size -->
            <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=2}">
                <TextBlock Text="Step 2: Set Team Size" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="How many QA team members are in the rotation?" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Slider Value="{Binding TeamSize}" Minimum="1" Maximum="20" Width="300"
                            TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding TeamSize}" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text=" members" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <TextBlock Text="ℹ️ You can add or remove team members later from the Watchers view."
                          TextWrapping="Wrap" Foreground="Gray" FontSize="12"/>
            </StackPanel>

            <!-- Step 3: Team Member Names -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                         Visibility="{Binding CurrentStep, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=3}">
                <StackPanel>
                    <TextBlock Text="Step 3: Enter Team Member Names" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                    <TextBlock Text="Enter the names of your team members in rotation order:" Margin="0,0,0,10"/>

                    <ItemsControl x:Name="MembersList" ItemsSource="{Binding TeamMemberNames}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContentPresenter},
                                                      Path=(ItemsControl.AlternationIndex),
                                                      Converter={StaticResource IndexPlusOneConverter}}"
                                              Width="30" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBox Text="{Binding Path=., Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Width="400"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="ℹ️ The rotation will cycle through this list automatically for each sprint."
                              TextWrapping="Wrap" Foreground="Gray" FontSize="12" Margin="0,20,0,0"/>
                </StackPanel>
            </ScrollViewer>
            </Grid>
        </Border>

        <!-- Navigation Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ui:Button Grid.Column="0" Content="← Previous"
                      Command="{Binding PreviousStepCommand}"
                      Visibility="{Binding CurrentStep, Converter={StaticResource GreaterThanToVisibilityConverter}, ConverterParameter=1}"
                      Padding="15,8"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Ellipse Width="12" Height="12" Margin="5"
                        Fill="{Binding CurrentStep, Converter={StaticResource StepToColorConverter}, ConverterParameter=1}"/>
                <Ellipse Width="12" Height="12" Margin="5"
                        Fill="{Binding CurrentStep, Converter={StaticResource StepToColorConverter}, ConverterParameter=2}"/>
                <Ellipse Width="12" Height="12" Margin="5"
                        Fill="{Binding CurrentStep, Converter={StaticResource StepToColorConverter}, ConverterParameter=3}"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <!-- Skip Setup removed to enforce mandatory initial configuration -->
                <ui:Button Content="Next →"
                          Command="{Binding NextStepCommand}"
                          Visibility="{Binding CurrentStep, Converter={StaticResource LessThanToVisibilityConverter}, ConverterParameter=3}"
                          Padding="15,8"/>
                <ui:Button Content="Finish"
                          Command="{Binding FinishSetupCommand}"
                          Visibility="{Binding CurrentStep, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=3}"
                          Padding="15,8"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
