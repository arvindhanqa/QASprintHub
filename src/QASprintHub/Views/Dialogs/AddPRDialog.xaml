<Window x:Class="QASprintHub.Views.Dialogs.AddPRDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:enums="clr-namespace:QASprintHub.Models.Enums"
        Title="Add Pull Request"
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Add Pull Request" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

        <!-- PR Title -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Title:" Margin="0,0,0,5"/>
            <TextBox x:Name="TitleTextBox" Padding="8" FontSize="14"/>
        </StackPanel>

        <!-- Author -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Author:" Margin="0,0,0,5"/>
            <TextBox x:Name="AuthorTextBox" Padding="8" FontSize="14"/>
        </StackPanel>

        <!-- Status -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="Status:" Margin="0,0,0,5"/>
            <ComboBox x:Name="StatusComboBox" Padding="8" FontSize="14" SelectedIndex="0">
                <ComboBoxItem Content="Pending" Tag="Pending"/>
                <ComboBoxItem Content="Merged" Tag="Merged"/>
                <ComboBoxItem Content="Blocked" Tag="Blocked"/>
                <ComboBoxItem Content="Closed" Tag="Closed"/>
            </ComboBox>
        </StackPanel>

        <!-- Priority -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock Text="Priority:" Margin="0,0,0,5"/>
            <ComboBox x:Name="PriorityComboBox" Padding="8" FontSize="14" SelectedIndex="1">
                <ComboBoxItem Content="Low" Tag="Low"/>
                <ComboBoxItem Content="Medium" Tag="Medium"/>
                <ComboBoxItem Content="High" Tag="High"/>
            </ComboBox>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <ui:Button Content="Cancel" Appearance="Secondary" Click="Cancel_Click" Margin="0,0,10,0" Padding="20,8"/>
            <ui:Button Content="Add" Appearance="Primary" Click="OK_Click" Padding="20,8"/>
        </StackPanel>
    </Grid>
</Window>
